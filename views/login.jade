extends layout

block content
	script(type='text/javascript', src="https://cdn.firebase.com/js/client/2.2.7/firebase.js")
	script(type='text/javascript', src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
	script(type='text/javascript', src='/javascripts/auth.js')
	h1= Login
	h2(id='error')

	form(onsubmit='return false;')
		h2(type='login', name='login') Login
		input(type='email', name='email', placeholder='Email')
		input(type='password', name='password', placeholder='Password')
		input(type='submit', onclick='login(this.form.email.value, this.form.password.value)')

	form(action='/signup', method='post')
		h2(type='signup', name='signup') Signup
		input(type='email', name='email', placeholder='Email')
		input(type='password', name='password', placeholder='Password')
		input(type='submit')

	h2 Login With Facebook
	button(type='submit', onclick="loginFacebookPopup()") Login